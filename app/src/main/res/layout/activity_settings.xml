<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".SettingsActivity">

    <!--<TextView
        android:id="@+id/text_accessibility_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务状态：检测中..."
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>-->

    <Button
        android:id="@+id/button_open_accessibility_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="前往系统设置开启/关闭服务"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用黑名单"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在选中的应用中将禁用按键翻页功能。"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_manage_blacklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理应用黑名单"/>

</LinearLayout>